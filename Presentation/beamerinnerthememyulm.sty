%Titelseite der Prsentation:

\defbeamertemplate*{title page}{myulm}[1][]
{
    \vspace{-0.16em}
%Logo der Uni:
    \begin{tabular*}{\paperwidth}[b]{p{14em}r}
        \vspace{0.6em}
        & \includegraphics[scale=0.26]{logo_100_Pant_RGB.jpg}
    \end{tabular*}
%grosses Bild in der Mitte der Startseite:
      \begin{beamercolorbox}[sep=8pt,left,#1]{institute}
          \leftskip-2.58em%
          \vskip-0.8em
          \includegraphics[width=\paperwidth]{startbild1.jpg}
        \end{beamercolorbox}

%Bereich unter dem Bild:
        \begin{beamercolorbox}[sep=8pt,right,#1]{title}
            \leftskip-3em%
            \vskip-1.0em%
             \begin{tabular*}{\paperwidth}[b]{p{16em}p{16em}}
%Titel der Präsentation:
                  & \usebeamerfont{title}\parbox{16em}{\inserttitle}\\%
                  \\
                  \hspace{0.3cm}
				  \textcolor[rgb]{0,0,0}{  \parbox[t]{15.5em}
                  {\tiny \insertauthor\ $\vert$ \presdatum\ $\vert$ \insertinstitute}}%
%Untertitel der Präsentation:
               & {\usebeamerfont{subtitle}\parbox{17em}{\insertsubtitle}}\\%
             \end{tabular*}
        \end{beamercolorbox}%

    {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
  \vfill
}


% Part page: myulm 
\defbeamertemplate*{part page}{myulm }[1][]
{
  \begin{centering}
    {\usebeamerfont{part name}\usebeamercolor[fg]{part name}\partname~\insertromanpartnumber}
    \vskip1em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{part title}
      \usebeamerfont{part title}\insertpart\par
    \end{beamercolorbox}
  \end{centering}
} 
